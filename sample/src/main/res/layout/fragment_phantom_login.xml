<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/metaplexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/metaplex"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:drawableStartCompat="@drawable/ic_metaplex_logo_mark"
        android:drawablePadding="25dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/loginWithPhantomBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#01FFBC"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:text="@string/login_with_phantom"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp" />
</LinearLayout>